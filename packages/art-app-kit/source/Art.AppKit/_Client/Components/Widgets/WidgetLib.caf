import &StandardImport

class WidgetLib
  @drawButton: ({hover, disabled, gridSize}, {radius, drawPadding, hoverColor}) ->
    hoverColor ?= AppPalette.primary
    padding: drawPadding
    radius: radius ? gridSize / 2
    fill:
      if hover && !disabled
        hoverColor
      else
        rgbColor hoverColor
        .withAlpha 0