import &StandardImport

class WidgetLib
  @drawButton: ({hover, disabled, gridSize}, {radius, drawPadding, hoverColor, lightColor}) ->
    hoverColor ?=
      if lightColor
        TextPalette.white.secondary
      else AppPalette.primaryLight1
    padding: drawPadding
    radius: radius ? gridSize / 2
    fill:
      if hover && !disabled
        hoverColor
      else
        rgbColor hoverColor
        .withAlpha 0